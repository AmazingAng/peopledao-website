{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"preserveValueImports": false,
		"paths": {
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			],
			"$assets/*": [
				"static/assets/*"
			],
			"$components/*": [
				"src/components/*"
			],
			"$constants/*": [
				"src/constants/*"
			],
			"$helpers/*": [
				"src/helpers/*"
			],
			"$layout/*": [
				"src/layout/*"
			],
			"$services/*": [
				"src/services/*"
			],
			"$stores/*": [
				"src/stores/*"
			],
			"$types/*": [
				"src/types/*"
			],
			"$util/*": [
				"src/util/*"
			]
		}
	}
}